<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.willy.activitygenerator.Generator"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/textView_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_marginTop="17dp" />

    <ImageView
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/jobimage"
        android:layout_marginTop="120dp"
        android:id="@+id/imageView_todo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ic_nojob" />

    <TextView
        android:id="@+id/textView_newWord"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:text="@string/new_word" />

    <TableLayout
        android:id="@+id/TableGame"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        >

        <TableRow>
        <FrameLayout
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">
            <Button
                android:id="@+id/button_skip"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bt_skip"
                android:layout_gravity="left"/>

            <Button
                android:id="@+id/button_view"
                android:background="@drawable/bt_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/button_check"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bt_check"
                android:layout_gravity="right"/>
            </FrameLayout>
        </TableRow>
    </TableLayout>

</RelativeLayout>
